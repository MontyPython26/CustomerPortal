@model BusinessObjectLayer.CommonEntities.CustomerModule;



<div class="row">
    <div class="col-lg-6">
        <h3>Customer List </h3>
        </div>

     <div class="col-lg-6">
         <a href="@Url.Action("CreateCustomer","Customer")" class="btn btn-primary"> Add New Customer </a>
         
     </div>


</div>

<div class="row">
    <div class="col-lg-8">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Customer ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope ="col">
                        actions
                    </th>
                </tr>
            </thead>
            <tbody>

                @{
                    if(Model!=null && Model.customerdetail!=null && Model.customerdetail.Count()>0)
                    {
                        foreach(var item in Model.customerdetail)
                        {
                            <tr>
                                <th scope="row">@item.CustomerId</th>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.EMail</td>
                                <td> <div class="col-lg-6">
                            <a href="@Url.Action("EditCustomer","Customer",
                            new{
                                id =item.CustomerId
                            }
                            )" class="btn btn-primary">Edit </a>

                        </div>
                        </td>
                            </tr>
                        }

                    }
                }
                
                
            </tbody>
        </table>
    </div>

</div>